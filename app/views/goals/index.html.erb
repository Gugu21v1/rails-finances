<div class="container m-5">
  <section class="payment-section">
    <% @goals.each do |goal| %>
      <div class="payments">
        <div class="payment">
          <div class="payment-details">
            <h2><%= goal.nome %></h2>
            <h3><%= goal.desc %></h3>
            <div>
              <span> R$ <%= goal.valor.to_f %></span>
              <span> <%= goal.tempo %></span>
              <button class="icon-button">
                <i class="ph-caret-right-bold"></i>
              </button>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </section>
</div>
